{
  "name": "@alaarab/fluent-data-table",
  "version": "1.0.2",
  "description": "Full-featured Fluent UI DataGrid-based data table (sorting, filtering, pagination, column chooser, CSV export).",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && npm run copy-styles",
    "copy-styles": "copyfiles -u 1 \"src/**/*.module.scss\" dist/esm",
    "prepare": "npm run build",
    "test": "jest --testPathPattern=exportToCsv --testPathPattern=useFilterOptions",
    "test:all": "jest",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "fluentui",
    "datatable",
    "react",
    "typescript",
    "grid"
  ],
  "author": "Ala Arab",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.scss"
  ],
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@fluentui/react-components": "^9.0.0",
    "@fluentui/react-icons": "^2.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@fluentui/react-components": "^9.72.10",
    "@fluentui/react-icons": "^2.0.317",
    "@storybook/react": "^10.2.1",
    "@storybook/react-vite": "^10.2.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "copyfiles": "^2.4.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.80.0",
    "scheduler": "^0.23.0",
    "storybook": "^10.2.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
